//登录

extend layout

//覆盖layout中的page，这里的page其实是页面的menu菜单
block page
    - var menu= 'login'

block content
    .col-md-4.col-md-offset-4
        h2 登录
        div= error
        div
            form(action="/login", method="POST")
                P
                    input.form-control(name="email",type="text", placeholder="")
                P
                    input.form-control(name="password",type="password",placeholder="***")
                P
                    button.btn.btn-lg.primary.btn-block("type=submit") 登录
